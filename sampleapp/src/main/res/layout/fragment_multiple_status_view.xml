<?xml version="1.0" encoding="utf-8"?>
<com.github.ddnosh.arabbit.ui.multipleviewstatus.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiple_status_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:emptyView="@layout/view_empty"
    app:errorView="@layout/view_error"
    app:loadingView="@layout/view_loading"
    app:noNetworkView="@layout/view_no_network">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_ui_pagestatus_loading"
            style="@style/button_common_style"
            android:text="Loading" />

        <Button
            android:id="@+id/btn_ui_pagestatus_empty"
            style="@style/button_common_style"
            android:text="Empty" />

        <Button
            android:id="@+id/btn_ui_pagestatus_error"
            style="@style/button_common_style"
            android:text="Error" />

        <Button
            android:id="@+id/btn_ui_pagestatus_networkerror"
            style="@style/button_common_style"
            android:text="NetworkError" />
    </LinearLayout>
</com.github.ddnosh.arabbit.ui.multipleviewstatus.MultipleStatusView>